{
  "expo": {
    "name": "Restaurant Manager - AI Phone Assistant",
    "slug": "restaurant-manager-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4F83FF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.restaurantmanager",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan receipts and QR codes.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice recording features.",
        "NSLocationWhenInUseUsageDescription": "This app uses location to show nearby restaurants and delivery areas."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4F83FF"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.yourcompany.restaurantmanager",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO", 
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },

    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "owner": "your-username-here"
  }
}
